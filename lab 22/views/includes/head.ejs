<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if (privileges.indexOf('privileges_goals') >= 0) { %> Goals
      user<% } else if (privileges.indexOf('privileges_actions') >= 0)
      { %> Actions user<% } else if (privileges.indexOf('all') >= 0) {
      %> Admin user <% } %>
    </title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <nav
      class="navbar"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand">
        <a
          class="navbar-item"
          href="<%= privileges.indexOf('privileges_goals') >= 0 ? '/todolist/goals' : '/todolist/actions' %>"
        >
          <img
            src="https://bulma.io/images/bulma-logo.png"
            width="112"
            height="28"
          />
        </a>

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <% if (privileges.indexOf('privileges_goals') >= 0) { %>
          <a href="/todolist/goals" class="navbar-item"> Goals </a> <%
          } else if (privileges.indexOf('privileges_actions') >= 0) {
          %>
          <a href="/todolist/actions" class="navbar-item"> Actions </a
          ><% } else if (privileges.indexOf('all') >= 0) { %>
          <a href="/todolist/goals" class="navbar-item"> Goals </a>
          <a href="/todolist/actions" class="navbar-item"> Actions </a
          ><% } %>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if (isLoggedIn) { %>
              <p style="margin-right: 10px">
                Hola <%= privileges.indexOf('all') >= 0 ?
                'administrador ' : ''%> <%= nombre %>
              </p>
              <a href="/usuarios/logout" class="button is-danger">
                Sign out
              </a>
              <% } else { %>
              <a class="button is-primary" href="/usuarios/signup">
                <strong>Sign up</strong>
              </a>
              <a class="button is-light" href="/usuarios/login">
                Log in
              </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="container"></div>
  </body>
</html>
