<%- include('includes/head.ejs') %>

<h1 class="title">Actions</h1>

<% if (actions.length > 0) { %>
    <div class="columns">
        <% let columns = 0; %>
        <% for (let action of actions) { %>
            <% if (columns % 4 == 0) { %>
    </div>
    <div class="columns">
            <% } %>
            <% columns++; %>
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= action.img %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= action.name %></p>
                                <p class="subtitle is-6"><%= action.type %></p>
                            </div>
                        </div>
                        <div class="content">
                            <%= action.description %>
                            <br>
                            <time datetime="<%= action.created_at %>"> <%= action.created_at %> </time>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>There are no Actions</h1>
<% } %> 

<% if (lastAction != '') { %>
    <div class="notification is-link is-light">
        Last Action Created: <%= lastAction %>
    </div>
<% } %>

<a href="/todolist/newaction" class="button is-link is-rounded">Create Action</a>

<%- include('includes/foot.ejs') %>
